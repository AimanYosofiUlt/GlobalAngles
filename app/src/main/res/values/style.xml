<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="edit_text">
        <item name="android:background">@drawable/back_edittext</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="edit_text2">
        <item name="android:background">@drawable/back_edittext2</item>
        <item name="android:textSize">14sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="spinner">
        <item name="android:background">@drawable/back_edittext2</item>
        <item name="android:textSize">14sp</item>
    </style>

    <style name="search_edit_text">
        <item name="android:background">@drawable/back_search_edittext</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">12sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="search_add_shipment_edit_text">
        <item name="android:background">@drawable/back_edt</item>
        <item name="android:textSize">14sp</item>
        <item name="android:drawableStart">@drawable/ic_search</item>
        <item name="android:drawablePadding">12sp</item>
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingTop">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingBottom">12dp</item>
    </style>

    <style name="link_text_view">
        <item name="android:textColor">@color/primary_color</item>
    </style>

    <style name="button">
        <item name="android:background">@drawable/click_button</item>
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="button_text">
        <item name="android:textSize">14sp</item>
        <item name="android:textColor">@color/white</item>
        <item name="android:textAllCaps">false</item>
    </style>

    <style name="radio_button">
        <item name="android:paddingStart">16dp</item>
        <item name="android:paddingEnd">16dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/check_round8</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/check_text_round8</item>
    </style>

    <style name="radio_button2">
        <item name="android:paddingStart">12dp</item>
        <item name="android:paddingEnd">12dp</item>
        <item name="android:paddingTop">8dp</item>
        <item name="android:paddingBottom">8dp</item>
        <item name="android:background">@drawable/check_gray_round8</item>
        <item name="android:button">@android:color/transparent</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textColor">@drawable/check_text_round8</item>
    </style>
</resources>